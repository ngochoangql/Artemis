<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".House" >

    <TextView
        android:id="@+id/livingRoomId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="LivingRoom"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/layoutLingRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:columnCount="4"
        app:flow_wrapMode="aligned"
        app:layout_constraintTop_toBottomOf="@+id/livingRoomId"
        tools:layout_editor_absoluteX="0dp">

    </GridLayout>

    <TextView
        android:id="@+id/bedRoomId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="BedRoom"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutLingRoom" />

    <GridLayout
        android:id="@+id/layoutBedRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:columnCount="4"
        app:flow_wrapMode="aligned"
        app:layout_constraintTop_toBottomOf="@+id/bedRoomId"
        tools:layout_editor_absoluteX="0dp">

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>